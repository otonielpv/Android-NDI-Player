<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:deviceIds="tv">

    <LinearLayout
        android:id="@+id/refresh_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="end"
        android:background="@android:color/transparent">

        <Button
            android:id="@+id/btn_refresh_sources"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/refresh_sources"
            android:drawableLeft="@android:drawable/ic_popup_sync"
            android:drawablePadding="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:minWidth="120dp"
            android:layout_marginEnd="16dp" />

    </LinearLayout>

    <fragment
        android:id="@+id/main_browse_fragment"
        android:name="androidx.leanback.app.BrowseSupportFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/refresh_button_container"
        android:layout_marginTop="8dp"
        tools:ignore="FragmentTagUsage" />

</RelativeLayout>
